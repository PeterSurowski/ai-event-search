{
  "name": "@timelycare/code-challenge-platform-intel",
  "version": "0.1.0",
  "description": "Platform event intelligence service with MCP interface",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "mcp:dev": "bun src/mcp/server.ts",
    "mcp:inspect": "bunx @modelcontextprotocol/inspector bun src/mcp/server.ts",
    "db:migrate": "bun scripts/migrate.ts",
    "db:seed": "bun scripts/seed.ts",
    "db:reset": "bun run db:migrate && bun run db:seed",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.0.0",
    "openai": "^4.77.0",
    "pg": "^8.13.0",
    "pgvector": "^0.2.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.0",
    "drizzle-kit": "^0.30.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0"
  }
}
